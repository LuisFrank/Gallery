<p id="notice"><%= notice %></p>

<h1>Admin Portfolios</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Order</th>
      <th>Show</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_portfolios.each do |admin_portfolio| %>
      <tr>
        <td><%= admin_portfolio.name %></td>
        <td><%= admin_portfolio.description %></td>
        <td><%= admin_portfolio.order %></td>
        <td><%= admin_portfolio.show ? "SI" : "NO" %></td>
        <td><%= admin_portfolio.active %></td>
        <td><%= link_to 'Show', admin_portfolio %></td>
        <td><%= link_to 'Edit', edit_admin_portfolio_path(admin_portfolio) %></td>
        <td><%= link_to 'Destroy', admin_portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p id="notice"><%= notice %></p>

<h1>Admin Jewelries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Order</th>
      <th>Show</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_jewelries.each do |admin_jewelry| %>
      <tr>
        <td><%= admin_jewelry.name %></td>
        <td><%= admin_jewelry.description %></td>
        <td><%= admin_jewelry.order %></td>
        <td><%= admin_jewelry.show ? "SI" : "NO" %></td>
        <td><%= admin_jewelry.active %></td>
        <td><%= link_to 'Show', admin_jewelry %></td>
        <td><%= link_to 'Edit', edit_admin_jewelry_path(admin_jewelry) %></td>
        <td><%= link_to 'Destroy', admin_jewelry, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p id="notice"><%= notice %></p>

<h1>Admin Sports</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Show</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_sports.each do |admin_sport| %>
      <tr>
        <td><%= admin_sport.name %></td>
        <td><%= admin_sport.description %></td>
        <td><%= admin_sport.show %></td>
        <td><%= admin_sport.order %></td>
        <td><%= link_to 'Show', admin_sport %></td>
        <td><%= link_to 'Edit', edit_admin_sport_path(admin_sport) %></td>
        <td><%= link_to 'Destroy', admin_sport, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

